#ifndef GGSL_BLOCK_@CAPITOL_TYPE@_H_INCLUDED
#define GGSL_BLOCK_@CAPITOL_TYPE@_H_INCLUDED

#include <gsl/gsl_block.h>
#include <glib.h>
#include <gio/gio.h>

G_BEGIN_DECLS

/* structs */
/**
 * GslBlock@GLIB_STRUCT_AFFIX@:
 * @size: (type gsize): A single value that determines the size of the block
 * @data: (type @GLIB_TYPE@*) (array length=size): An array of length size
 */
typedef struct gsl_block@GSLAFFIX@_struct GslBlock@GLIB_STRUCT_AFFIX@;

/* Type definitions */
#define GSL_TYPE_BLOCK@GLIB_MACRO_AFFIX@\
  (gsl_block@GSLAFFIX@_get_type ())

/* Public functions */
/**
 * gsl_block@GSLAFFIX@_alloc:
 * @n:
 *
 * Returns: (nullable) (transfer full):
 */
GslBlock@GLIB_STRUCT_AFFIX@ *gsl_block@GSLAFFIX@_alloc (const size_t n);

/**
 * gsl_block@GSLAFFIX@_calloc:
 * @n:
 *
 * Returns: (nullable) (transfer full):
 */
GslBlock@GLIB_STRUCT_AFFIX@ *gsl_block@GSLAFFIX@_calloc (const size_t n);

/**
 * gsl_block@GSLAFFIX@_free:
 * @b:
 */
void gsl_block@GSLAFFIX@_free (GslBlock@GLIB_STRUCT_AFFIX@ * b);

/**
 * gsl_block@GSLAFFIX@_size:
 * @b:
 *
 * Returns:
 */
size_t gsl_block@GSLAFFIX@_size (const GslBlock@GLIB_STRUCT_AFFIX@ * b);

/*
 * gsl_block@GSLAFFIX@_data:
 * @b:
 *
 * Returns: (nullable) (transfer none) (array):
